<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.anipe.verbrauchsapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="19" />
    
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
        
    <application
        android:allowBackup="true"
        android:icon="@drawable/gas_station"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        
        <meta-data 
			android:name="com.google.android.gms.version" 
			android:value="@integer/google_play_services_version" />
        <meta-data android:name="de.anipe.verbrauchsapp.ApplicationId" android:value="@string/app_id"/>
        
        <activity
            android:name="de.anipe.verbrauchsapp.MainActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Holo" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
			android:name="de.anipe.verbrauchsapp.CarInputActivity"
			android:windowSoftInputMode="adjustResize"
			android:label="@string/car_input_name" >
        </activity>
        <activity
			android:name="de.anipe.verbrauchsapp.CarListActivity"
			android:label="@string/cars_view_name" >
        </activity>
        <activity
			android:name="de.anipe.verbrauchsapp.CarContentActivity"
			android:label="@string/car_dataset_label" >
        </activity>
        <activity
			android:name="de.anipe.verbrauchsapp.CSVImportActivity"
			android:label="@string/csv_import_label" >
        </activity>
        <activity
			android:name="de.anipe.verbrauchsapp.PictureImportActivity"
			android:label="@string/picture_import_label" >
        </activity>
        <activity
			android:name="de.anipe.verbrauchsapp.ConsumptionInputActivity"
			android:windowSoftInputMode="adjustResize"
			android:label="@string/cons_add_label" >
        </activity>
        <activity
			android:name="de.anipe.verbrauchsapp.ConsumptionListActivity"
			android:label="@string/cons_list_label" >
        </activity>
        <activity
			android:name="de.anipe.verbrauchsapp.PlotActivity"
			android:label="@string/cons_plot_header" >
        </activity>
        <activity
			android:name="de.anipe.verbrauchsapp.io.GDriveStoreActivity"
			android:label="@string/store_drive_label" >
            <data android:mimeType="text/xml" />
            <data android:mimeType="text/csv" />
            <action android:name="com.google.android.apps.drive.DRIVE_OPEN" />
        </activity>
    </application>

</manifest>
